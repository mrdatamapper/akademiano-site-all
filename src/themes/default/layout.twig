<!DOCTYPE html>
<html lang={{ html.lang|default("ru") }}>

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>{{ pageTitle | default('Datamapper Site') }}</title>
    {% if pageDescription %}
        <meta name="description" content="{{ pageDescription }}"/>
    {% endif %}

    {{ asset_css([
    "font-awesome/css/font-awesome.min.css",
    "simple-line-icons/css/simple-line-icons.css",
    "coreui.io/Static_Full_Project_GULP/css/style.css",
    "assets/css/coreui-fix.css",
    "assets/css/akademiano.css",
    ], default, true) }}

    {% block css %}
    {% endblock css %}

</head>

<!-- BODY options, add following classes to body to change options

// Header options
1. '.header-fixed'					- Fixed Header

// Sidebar options
1. '.sidebar-fixed'					- Fixed Sidebar
2. '.sidebar-hidden'				- Hidden Sidebar
3. '.sidebar-off-canvas'		- Off Canvas Sidebar
4. '.sidebar-minimized'			- Minimized Sidebar (Only icons)
5. '.sidebar-compact'			  - Compact Sidebar

// Aside options
1. '.aside-menu-fixed'			- Fixed Aside Menu
2. '.aside-menu-hidden'			- Hidden Aside Menu
3. '.aside-menu-off-canvas'	- Off Canvas Aside Menu

// Footer options
1. '.footer-fixed'						- Fixed footer

-->

{% block body %}
    <body class="app header-fixed sidebar-fixed aside-menu-fixed aside-menu-hidden">

    {% block navbar %}
        <header class="app-header navbar">
            <button class="navbar-toggler mobile-sidebar-toggler d-lg-none" type="button">☰</button>
            <a class="navbar-brand" href="#"></a>
            <ul class="nav navbar-nav d-md-down-none">
                <li class="nav-item">
                    <a class="nav-link navbar-toggler sidebar-toggler" href="#">☰</a>
                </li>

                <li class="nav-item px-3">
                    <a class="nav-link" href="#">Dashboard</a>
                </li>

            </ul>
            <ul class="nav navbar-nav ml-auto">
                <li class="nav-item d-md-down-none">
                    <a class="nav-link" href="#"><i class="icon-bell"></i><span class="badge badge-pill badge-danger">5</span></a>
                </li>
                <li class="nav-item d-md-down-none">
                    <a class="nav-link" href="#"><i class="icon-list"></i></a>
                </li>
                <li class="nav-item d-md-down-none">
                    <a class="nav-link" href="#"><i class="icon-location-pin"></i></a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle nav-link" data-toggle="dropdown" href="#" role="button"
                       aria-haspopup="true" aria-expanded="false">
                        {#<img src="img/avatars/6.jpg" class="img-avatar" alt="admin@bootstrapmaster.com">#}
                        <span class="d-md-down-none">{{ current_user().title | default("Account") }}</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">

                        <div class="dropdown-header text-center">
                            <strong>Account</strong>
                        </div>
                        <a class="dropdown-item"
                           href="{{ url(constant("Akademiano\\UserEO\\UsersOpsRoutesStore::LOGOUT_ROUTE")) }}"><i
                                    class="fa fa-lock"></i> Logout</a>
                    </div>
                </li>

                <li class="nav-item d-md-down-none">
                    <a class="nav-link navbar-toggler aside-menu-toggler" href="#">☰</a>
                </li>


            </ul>
        </header>
    {% endblock navbar %}

    {% block appBody %}
        <div class="app-body">
            {% block sidebar %}
                <div class="sidebar">
                    <nav class="sidebar-nav">
                        <ul class="nav">
                            <li class="nav-item">
                                <a class="nav-link" href="index.html"><i class="icon-speedometer"></i> Dashboard <span class="badge badge-info">NEW</span></a>
                            </li>
                        </ul>
                    </nav>
                </div>
            {% endblock sidebar %}

            <!-- Main content -->
            {% block main %}
                <main class="main">

                    <!-- Breadcrumb -->
                    {% block breadcrumb %}
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">Home</li>
                            <li class="breadcrumb-item active">Dashboard</li>
                        </ol>
                    {% endblock breadcrumb %}
                    <!-- End Breadcrumb -->


                    {% block mainContainer %}
                        <div class="container-fluid">

                            <div class="{{ mainContainerAnimated ? "animated fadeIn" }}">

                                <div class="row">
                                    <div class="col-md-12">
                                        {% block mainContainerContent %}

                                        {% endblock mainContainerContent %}
                                    </div>
                                    <!--/.col-->
                                </div>
                                <!--/.row-->
                            </div>


                        </div>
                    {% endblock mainContainer %}
                    <!-- /.conainer-fluid -->
                </main>
            {% endblock main %}

            {% block aside %}
                <aside class="aside-menu">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#timeline" role="tab"><i class="icon-list"></i></a>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane active" id="timeline" role="tabpanel">
                            <div class="callout m-0 py-2 text-muted text-center bg-faded text-uppercase">
                                <small><b>Today</b>
                                </small>
                            </div>
                        </div>
                    </div>
                </aside>
            {% endblock aside %}


        </div>
    {% endblock appBody %}


    {% block footer %}
        <footer class="app-footer">
            <a href="http://coreui.io">CoreUI</a> © 2017 creativeLabs.
            <span class="float-right">Powered by <a href="http://coreui.io">CoreUI</a>
        </span>
        </footer>
    {% endblock footer %}


    <!--   Core JS Files   -->
    {{ asset_js([
    "jquery/dist/jquery.min.js",
    "tether/dist/js/tether.min.js",
    "bootstrap/dist/js/bootstrap.min.js",
    "pace/pace.min.js",
    "chart.js/dist/Chart.min.js"
    ], default, true) }}


    <!-- Plugins and scripts required by this views -->

    <!-- Custom scripts required by this view -->

    {{ asset_js([
    "coreui.io/Static_Full_Project_GULP/js/app.js",
    "coreui.io/Static_Full_Project_GULP/js/views/main.js"
    ], default, true) }}


    {% block js %}

    {% endblock js %}


    </body>
{% endblock body %}

</html>
