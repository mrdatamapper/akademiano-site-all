{
  "name": "akademiano/site-all",
  "description": "akademiano shared sites data",
  "license": "Apache-2.0",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Vasiliy Shvakin",
      "email": "mrdatamapper@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Sites\\All\\": "src"
    }
  },
  "provide": {
    "akademiano/site-all-implementation": "1.0.0"
  },
  "require": {
    "akademiano/core": "^1.1",
    "oomphinc/composer-installers-extender": "^1.1",

    "bower-asset/bootstrap": "^3.3",
    "bower-asset/jquery": "^3.0",
    "bower-asset/html5shiv": "^3.7.3",
    "bower-asset/respond": "^1.4.2",
    "bower-asset/font-awesome": "^4.7",
    "bower-asset/simple-line-icons": "^2.4",
    "bower-asset/Ionicons": "^2.4",

    "bower-asset/admin-lte": "^2.4",

    "bower-asset/tether": "^1.4",
    "bower-asset/pace": "^1.0",
    "bower-asset/chart.js": "^2.6"
  },
  "require-dev": {
    "codeception/codeception": "^2.3.8",
    "satooshi/php-coveralls": "^2.0",
    "mockery/mockery": "^1.0",
    "codeception/c3": "^2.0.10"
  },
  "config": {
    "fxp-asset": {
      "installer-paths": {
        "npm-asset-library": "public/assets/vendor",
        "bower-asset-library": "public/assets/vendor"
      },
      "ignore-files": {
        "bower-asset/bootstrap": [
          "/.*",
          "_config.yml",
          "CNAME",
          "composer.json",
          "CONTRIBUTING.md",
          "docs",
          "js/tests",
          "test-infra",
          "fonts",
          "grunt",
          "js",
          "less",
          "Gruntfile.js",
          "package.json",
          "package.js"
        ],
        "bower-asset/jquery": [
          "**/.*",
          "build",
          "dist/cdn",
          "speed",
          "test",
          "*.md",
          "AUTHORS.txt",
          "Gruntfile.js",
          "package.json",
          "src"
        ]
      }
    }
  }
}
